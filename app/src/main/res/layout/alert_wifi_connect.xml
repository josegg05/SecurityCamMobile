<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <ImageView
            android:src="@drawable/ic_security_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:scaleType="center"
            android:background="@color/colorPrimaryDark"
            android:contentDescription="@string/app_name" />
    <TextView
            android:text="Insert Device PIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewPin"/>
    <EditText
            android:id="@+id/editTextPin"
            android:inputType = "numberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:maxLength="6"
            android:hint="Pin" />
    <TextView
            android:text="Connect to Network: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewNet"/>
    <EditText
            android:id="@+id/editTextpass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="Password"/>
</LinearLayout>